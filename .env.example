# ========================================
# Cutting Board Guys Platform Configuration
# ========================================
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development

# ========== BACKEND CONFIGURATION ==========

# Server
PORT=3001
BACKEND_URL=http://localhost:3001

# Database (PostgreSQL)
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL=postgresql://postgres:password@localhost:5432/cutting_board_guys

# JWT Secret (for user authentication)
# Generate a random string: https://randomkeygen.com/
JWT_SECRET=your-super-secret-jwt-key-change-this

# JWT Expiry
JWT_EXPIRES_IN=7d

# ========== FRONTEND CONFIGURATION ==========

# Frontend URL
FRONTEND_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=Cutting Board Guys Platform

# ========== EMAIL CONFIGURATION ==========

# Email Service (for sending invoices)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM="Cutting Board Guys <noreply@cuttingboardguys.ca>"

# ========== REDIS CONFIGURATION (Optional) ==========

# Redis Cache (leave blank if not using)
REDIS_URL=redis://localhost:6379

# ========== BUSINESS DEFAULTS ==========

# Default Region
DEFAULT_REGION=vancouver

# Tax Rates (as decimals)
GST_RATE=0.05
PST_RATE=0.07

# Invoice Settings
INVOICE_DUE_DAYS=30
INVOICE_START_NUMBER=10000

# ========== SECURITY ==========

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ========== DEVELOPMENT TOOLS ==========

# Prisma Studio Port
PRISMA_STUDIO_PORT=5555

# Debug Mode
DEBUG=false

# ========== THIRD PARTY SERVICES (Future) ==========

# Stripe (for payments - future feature)
# STRIPE_SECRET_KEY=
# STRIPE_PUBLISHABLE_KEY=

# Twilio (for SMS - future feature)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# Google Maps (for route planning - future feature)
# GOOGLE_MAPS_API_KEY=
